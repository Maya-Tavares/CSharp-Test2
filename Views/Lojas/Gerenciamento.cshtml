@model List<AvaliacaoLp3.Models.LojasViewModel>

@{
    ViewData["Title"] = "Lojas";
}
    
<h1>Gerenciamento</h1>
    
@if(Model.Count == 0)
{
    <p>Nenhuma loja cadastrada!</p>
}
else
{
    <hr>
    @foreach(var loja in Model)
    {
    <h1>@loja.Nome</h1>
    <a href="Detalhe/@loja.Id">Detalhar</a>
    <a href="Excluir/@loja.Id">Excluir</a>
    <hr>
    }
}